        <div class="row">
          <div class="col-md-6">

              <%  if(typeof(user.picture)!== "undefined"){ %>


              <section>
                  <img src="<%= user.picture.pic_path %>" alt="<%= user.picture.pic_name %>" />
                  <br><br>
              </section>
            <% } %>


              <%if (currentUser.username === user.username){ %>
                <section>
                  <form class="track-route" action="/profile/<%=user._id%>/pictures/upload" method="post" enctype="multipart/form-data">
                    <label for="file-upload" class="btn btn-primary">
                      <i class="fa fa-cloud-upload"></i> Choose Picture
                    </label>
                    <input class="btn btn-primary" type="submit" value="Save">
                    <input id="file-upload" type="file" name="photo">
                  </form>
                </section>
                <br><br>
                <%if(typeof(user)!=='undefined'){%>
                  <button type="button" class="btn btn-primary btnEdit" onclick="window.location.href='/profile/<%=user._id%>/delete'">Delete this User</button>
              <% }%>
            <% }%>
          </div>
          <div class="col-md-6">
            <form action="/profile/<%=user._id%>/edit" method='POST'>

              <label for='username'>username</label>
              <input type='text' name='username' id='username' required value=<%=user.username%>>
              <br>
              <label for='name'>Name</label>
              <input type='text' name='name' id='name' required value=<%=user.name%>>
              <br>
              <label for='lastName'>Last Name</label>
              <input type='text' name='lastName' id='lastName' required value=<%=user.lastName%>>
              <br>
              <label for='email'>Email</label>
              <input type='text' name='email' id='email' required value=<%=user.email%>>
              <br>
              <label for='ubication'>Ubication</label>
              <input type='text' name='ubication' id='ubication' required value=<%=user.ubication%>>
              <br>
              <label for='address'>Address</label>
              <input type='text' name='address' id='address' required value=<%=user.address%>>
              <br>
              <label for='password'>Password</label>
              <input type='password' name='password' id='password' required>
              <br>

              <button type='sumbit'>edit user</button>
            </form>




            <form action="/<%=user._id%>/edit" method="POST" id="form-container">
              <div class="form-group row">
                <label for="username" class="col-2 col-form-label">User Name</label>
                <div class="col-10">
                  <input class="form-control" type="text" value="<%=user.username%>" name="username" required>
                </div>
              </div>
              <div class="form-group row">
                <label for="name" class="col-2 col-form-label">Name</label>
                <div class="col-10">
                  <input class="form-control" type="text" value="<%=user.name%>" id="name" name="name" required>
                </div>
              </div>
              <div class="form-group row">
                <label for="lastName" class="col-2 col-form-label">Last Name</label>
                <div class="col-10">
                  <input class="form-control" type="text" value="<%=user.lastName%>" id="lastName" name="lastName" required>
                </div>
              </div>
              <div class="form-group row">
                <label for="email" class="col-2 col-form-label">Email</label>
                <div class="col-10">
                  <input class="form-control" type="text" value="<%=user.email%>" id="email" name="email" required>
                </div>
              </div>
              <div class="form-group row">
                <label for="ubication" class="col-2 col-form-label">Ubication</label>
                <div class="col-10">
                  <input class="form-control" type="text" value="<%=user.ubication%>" id="ubication" name="ubication" required>
                </div>
              </div>
              <div class="form-group row">
                <label for="address" class="col-2 col-form-label">Address</label>
                <div class="col-10">
                  <input class="form-control" type="text" value="<%=user.address%>" id="address" name="address" required>
                </div>
              </div>
              <div class="form-group row">
                <label for="password" class="col-2 col-form-label">Password</label>
                <div class="col-10">
                  <input class="form-control" type="password" value="" id="password" name="password" required>
                </div>
              </div>

              <button type="sumbit" class="btn btn-primary">Edit User</button>
              <br><br>
              <button type="button" class="btn btn-primary" onclick="window.location.href='/main'">Home</button>
            </form>


