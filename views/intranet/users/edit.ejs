<h2>Edit User</h2>

<%if(typeof(user)!=='undefined'){%>
  <form action="/profile/<%=user._id%>/delete" method="POST" id="form-container">
    <button>Delete this User</button>
  </form>

  <section>
      <img src="<%= user.picture.pic_path %>" alt="<%= user.picture.pic_name %>" />
  </section>


  <%if (currentUser.username === user.username){ %>
    <section>
      <h2>Upload your photo</h2>
      <form action="/profile/<%=user._id%>/pictures/upload" method="post" enctype="multipart/form-data">
        <input type="file" name="photo">
        <input type="submit" value="Save">
      </form>
    </section>
  <% }%>
<% }%>

